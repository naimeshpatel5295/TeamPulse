{
  "name": "teampulse",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*",
    "frontend",
    "e2e",
    "scripts"
  ],
  "scripts": {
    "dev": "concurrently -n auth,api,worker,web -c blue,green,yellow,magenta \"npm run dev -w services/auth-service\" \"npm run dev -w services/api-service\" \"npm run dev -w services/worker-service\" \"npm run dev -w frontend\"",
    "dev:auth": "npm run dev -w services/auth-service",
    "dev:api": "npm run dev -w services/api-service",
    "dev:worker": "npm run dev -w services/worker-service",
    "dev:web": "npm run dev -w frontend",
    "build": "npm run build -w packages/shared && npm run build --workspaces --if-present",
    "build:shared": "npm run build -w packages/shared",
    "lint": "eslint . --ext .ts,.tsx --ignore-pattern dist --ignore-pattern node_modules",
    "lint:fix": "eslint . --ext .ts,.tsx --fix --ignore-pattern dist --ignore-pattern node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\" --ignore-path .gitignore",
    "clean": "rimraf **/dist **/node_modules/.cache",
    "db:seed": "ts-node scripts/seed.ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
